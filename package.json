{
  "name": "alchira",
  "displayName": "Alchira",
  "description": "Extension bundle for Alchira",
  "version": "0.0.1",
  "publisher": "yshelldev",
  "author": {
    "name": "Vyshnav Prasad",
    "email": "official@yshell.dev"
  },
  "homepage": "https://github.com/alchira",
  "repository": {
    "type": "git",
    "url": "https://github.com/alchira/vscode"
  },
  "bugs": {
    "url": "https://github.com/alchira/vscode/issues"
  },
  "contributing": "https://github.com/alchira/vscode/blob/main/CONTRIBUTING.md",
  "scripts": {
    "lint": "eslint ./typescript --ext .ts",
    "init": "npm install -g typescript @vscode/vsce ovsx && npm install",
    "esbuild": "node esbuild.config.mjs",
    "tsbuild": "npx tsc -p ./typescript",
    "package": "npm run init && npm run tsbuild && npm install --omit=dev && vsce package"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/node": "^22.18.11",
    "@types/vscode": "^1.51.0",
    "@types/ws": "^8.18.1",
    "eslint": "^9.13.0",
    "typescript": "^5.8.3",
    "esbuild": "^0.27.2",
    "typescript-eslint": "^8.26.0"
  },
  "dependencies": {
    "vscode-css-languageservice": "^6.3.5",
    "ws": "^8.18.3"
  },
  "license": "MIT",
  "licenseFile": "LICENSE",
  "type": "commonjs",
  "main": "./extension/activate.js",
  "icon": "./assets/logo.png",
  "galleryBanner": {
    "color": "#171b22",
    "theme": "dark"
  },
  "categories": [
    "Keymaps",
    "Snippets",
    "Language Packs",
    "Extension Packs",
    "Other"
  ],
  "extensionKind": [
    "workspace"
  ],
  "keywords": [
    "css",
    "alchira",
    "toolkit",
    "stylesheet",
    "intellisense",
    "autocomplete",
    "formatting",
    "extension"
  ],
  "engines": {
    "vscode": "^1.51.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "alchira",
      "properties": {
        "alchira.request.interval": {
          "type": "number",
          "default": 400,
          "description": "Increase Request Interval in Case of Performance issues, (min 200)."
        },
        "alchira.decoration.attribute": {
          "type": "string",
          "default": "#f57970",
          "description": "Color for tag attribute. Restart extension to take effect."
        },
        "alchira.intellisense.mode": {
          "type": "boolean",
          "default": true,
          "description": "Symlink suggestions can smart(true) or simple(false)"
        },
        "alchira.server.autostart": {
          "type": "boolean",
          "default": true,
          "description": "Incase of server faliure, auto-start another instance."
        },
        "alchira.server.staticport": {
          "type": "boolean",
          "default": true,
          "description": "Use a fixed static port for sketchpad WebSocket; disable if static cache issues occur (requires restart)."
        },
        "alchira.decoration.comment": {
          "type": "string",
          "default": "#ffbe88bb",
          "description": "Color for attribute comment value. Restart extension to take effect."
        },
        "alchira.decoration.property": {
          "type": "string",
          "default": "#ffe1a1",
          "description": "Color for css properties in tag value. Restart extension to take effect."
        },
        "alchira.decoration.value": {
          "type": "string",
          "default": "#f7b787",
          "description": "Color for tag value. Restart extension to take effect."
        }
      }
    },
    "languages": [
      {
        "id": "markdown",
        "aliases": [
          "Alchira"
        ],
        "extensions": [
          ".al",
          ".alchira"
        ]
      }
    ],
    "commands": [
      {
        "command": "alchira.editor.sketch",
        "title": "Sketch Structure after Tag",
        "category": "Alchira Editor"
      },
      {
        "command": "alchira.editor.format",
        "title": "Format Alchira Attribute Blocks in Active Editor",
        "category": "Alchira Editor"
      },
      {
        "command": "alchira.action.compview",
        "title": "Toggle Preview of Symlink",
        "category": "Alchira Action"
      },
      {
        "command": "alchira.action.toggle",
        "title": "Toggle b/w Source and Target Files",
        "category": "Alchira Action"
      },
      {
        "command": "alchira.action.command",
        "title": "Core Commands on Terminal.",
        "category": "Alchira Action"
      },
      {
        "command": "alchira.server.pause",
        "title": "Pause Activity",
        "category": "Alchira Server"
      },
      {
        "command": "alchira.server.restart",
        "title": "Restart",
        "category": "Alchira Server"
      },
      {
        "command": "alchira.server.send",
        "title": "Interactive",
        "category": "Alchira Server"
      }
    ],
    "keybindings": [
      {
        "key": "alt+x",
        "command": "alchira.editor.sketch",
        "when": "editorFocus"
      },
      {
        "key": "alt+shift+x",
        "command": "alchira.editor.format",
        "when": "editorFocus"
      },
      {
        "key": "alt+ctrl+x",
        "command": "alchira.action.compview",
        "when": "editorFocus"
      },
      {
        "key": "ctrl+alt+shift+x",
        "command": "alchira.action.toggle",
        "when": "editorFocus"
      }
    ],
    "css": {
      "customData": [
        "./css.json"
      ]
    },
    "html": {
      "customData": [
        "./xml.json"
      ]
    }
  }
}